{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020"],
    "noEmit": false,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}


