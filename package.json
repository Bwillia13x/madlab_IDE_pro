{
  "name": "mad-lab-workbench",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:test": "next dev -p 3010",
    "build": "pnpm -w --filter @madlab/core build && pnpm -w build:webview && pnpm --filter @madlab/extension build",
    "prebuild": "pnpm prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:db:push": "prisma db push",
    "start": "next start",
    "lint": "next lint",
    "lint:ci": "eslint . -c .eslintrc.ci.json --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:trace": "PW_TRACE_ALL=1 playwright test",
    "size": "size-limit",
    "load:ws": "pnpm dlx artillery run tests/load/ws.artillery.yml || true",
    "load:market": "pnpm dlx artillery run tests/load/market.artillery.yml || true",
    "load:db": "pnpm dlx artillery run tests/load/db.artillery.yml || true",
    "prepare": "husky",
    "postinstall": "pnpm prisma:generate || true",
    "dev:web": "next dev",
    "prebuild:web": "pnpm prisma:generate",
    "build:web": "next build",
    "prebuild:webview": "pnpm prisma:generate",
    "build:webview": "next build && rm -rf apps/extension/dist/webview && mkdir -p apps/extension/dist && cp -R out apps/extension/dist/webview",
    "dev:ext": "pnpm --filter @madlab/extension dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@next/swc-wasm-nodejs": "13.5.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-accordion": "^1.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.1.0",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "20.6.2",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "10.4.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.3.0",
    "eslint-config-next": "13.5.1",
    "input-otp": "^1.2.4",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.446.0",
    "next": "13.5.1",
    "next-themes": "^0.3.0",
    "postcss": "8.4.30",
    "react": "18.2.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "18.2.0",
    "react-grid-layout": "^1.4.4",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.3",
    "react-window": "^1.8.11",
    "recharts": "^2.12.7",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.2.2",
    "vaul": "^0.9.9",
    "zod": "^3.23.8",
    "web-vitals": "^4.2.0",
    "zustand": "^4.4.7"
  },
  "volta": {
    "node": "20.11.1"
  },
  "pnpm": {
    "allowedLicenses": [
      "MIT",
      "Apache-2.0",
      "ISC",
      "BSD-2-Clause",
      "BSD-3-Clause"
    ]
  },
  "customScripts": {
    "notes": "Helper aliases for Prisma"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.2.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@types/react-grid-layout": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "critters": "0.0.16",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.3",
    "prisma": "^6.14.0",
    "size-limit": "^11.2.0",
    "turbo": "^2.0.6",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "size-limit": [
    {
      "name": "Main bundle (static export)",
      "path": "out/_next/static/chunks/*.js",
      "limit": "3 MB",
      "gzip": true,
      "running": false
    },
    {
      "name": "CSS bundle",
      "path": "out/_next/static/css/*.css",
      "limit": "500 KB",
      "gzip": true,
      "running": false
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
