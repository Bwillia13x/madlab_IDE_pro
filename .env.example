# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Alternative AI Providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Feature Flags
NEXT_PUBLIC_FEATURE_ADV_AI=true
NEXT_PUBLIC_FEATURE_AUTH=false
NEXT_PUBLIC_FEATURE_COLLAB=false
NEXT_PUBLIC_FEATURE_MARKETPLACE_LAUNCH=false
NEXT_PUBLIC_FEATURE_DOCS=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/madlab
REDIS_URL=redis://localhost:6379

# API Keys for Data Providers
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
NEXT_PUBLIC_POLYGON_API_KEY=your_polygon_key
NEXT_PUBLIC_ALPACA_API_KEY=your_alpaca_key
NEXT_PUBLIC_ALPACA_SECRET_KEY=your_alpaca_secret
NEXT_PUBLIC_IB_HOST=your_ib_host
NEXT_PUBLIC_IB_PORT=7496
NEXT_PUBLIC_IB_CLIENT_ID=your_ib_client_id

# Monitoring and Tracing
ENABLE_OPENTELEMETRY=true
ENABLE_PROMETHEUS=true
ENABLE_HEALTH_HISTORY=true
METRICS_UPDATE_INTERVAL=30000
TRACING_SAMPLE_RATE=1.0
OTEL_SERVICE_NAME=madlab-platform
OTEL_SERVICE_VERSION=1.0.0
PROMETHEUS_PORT=9464
PROMETHEUS_ENDPOINT=/metrics

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production

# Workspace Sync (optional)
NEXT_PUBLIC_SYNC_WS_URL=wss://your-sync-server.com
NEXT_PUBLIC_SYNC_API_KEY=your-sync-api-key