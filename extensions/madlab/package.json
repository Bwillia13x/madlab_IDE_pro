{
  "name": "@madlab/builtin-extension",
  "displayName": "MadLab",
  "description": "Built-in MadLab finance panel with models tree.",
  "publisher": "madlab",
  "version": "0.0.1",
  "private": true,
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:madlab.open",
    "onView:madlab.financePanel",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "madlab.open", "title": "MadLab: Open Finance Panel" },
      { "command": "madlab.newModel", "title": "MadLab: New Model" }
    ],
    "viewsContainers": {
      "activitybar": [
        { "id": "madlab", "title": "MadLab", "icon": "images/icon.svg" }
      ]
    },
    "views": {
      "madlab": [
        { "id": "madlab.financePanel", "name": "Finance Panel" },
        { "id": "madlab.models", "name": "Models" }
      ]
    },
    "menus": {
      "commandPalette": [
        { "command": "madlab.open", "when": "true" },
        { "command": "madlab.newModel", "when": "true" }
      ]
    }
  },
  "scripts": {
    "build": "rimraf out media/main.js && tsc -p . && esbuild media/main.ts --bundle --format=iife --platform=browser --outfile=media/main.js",
    "watch": "tsc -p . -w",
    "clean": "rimraf out media/main.js"
  },
  "devDependencies": {
    "@types/node": "20.6.2",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.21.5",
    "rimraf": "^5.0.5",
    "typescript": "5.2.2"
  }
}
